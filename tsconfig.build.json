{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": [
    "api/**/*.ts",
    "lib/**/*.ts",
    "types.ts"
  ],
  "exclude": ["node_modules", "dist", "src"]
}
